#To download a fastq file
curl -H "Authorization: OAuth RJLEUQR6KH4WXTJCIQXUYXG4CXBVHQUQ " \
    https://appdev.kbase.us/services/shock-api/node/461665ae-f152-40f1-9c9c-55bf181a4d8b?download_raw \
    > rhodo.art.q50.SE.reads.fastq.gz
#To unzip the file 
gunzip rhodo.art.q50.SE.reads.fastq.gz

python3 miniscrub.py --compression gzip --cutoff 0.7 --mask --verbose rhodo.art.q50.SE.reads.fastq.gz

#Run bash in the container
docker run -it test/kb_miniscrub bash 
